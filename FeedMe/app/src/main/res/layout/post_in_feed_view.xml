        android:padding="15dp"
        android:minHeight="120dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodTypeID"
        android:layout_weight=".8"
